<local:UserControlBase x:Class="UsingReflaction.UserControls.UserControlForBool"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UsingReflaction.UserControls"
             mc:Ignorable="d" 
            d:DesignHeight="50" d:DesignWidth="400" Height="50" Background="Azure" MinWidth="200">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock Name="lblLabel" Text="label" Width="100" Height="20"/>
            <CheckBox Name="chkCheckBox" HorizontalAlignment="Left" Width="150" Height="20" Checked="chkCheckBox_CheckChanged" Unchecked="chkCheckBox_CheckChanged" Click="chkCheckBox_Click" />
        </StackPanel>
    </Grid>
</local:UserControlBase>
