<local:PropertyValueBase x:Class="UsingReflaction.UserControls.UserControlForBool"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UsingReflaction.UserControls"
             xmlns:data="clr-namespace:UsingReflaction.Entities"
              
             mc:Ignorable="d" 
            d:DesignHeight="50" d:DesignWidth="150" Height="30" MinWidth="100">

    <Grid>
        <GroupBox>
            <StackPanel Orientation="Horizontal">
                <TextBlock Name="lblLabel" Text="label" Width="100" Height="20"/>
                <CheckBox Name="chkCheckBox" HorizontalAlignment="Left" Width="15" Height="20" Checked="chkCheckBox_CheckChanged" Unchecked="chkCheckBox_CheckChanged" Click="chkCheckBox_Click" IsEnabled="{Binding Source={x:Static data:DataHolder.Instance}, Path = HasSelectedObject}" />
            </StackPanel>
        </GroupBox>
    </Grid>
</local:PropertyValueBase>
